{% extends 'base.html.twig' %}

{% block title %}Sign Up - GymForce{% endblock %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap');

    body {
        font-family: 'Montserrat', 'Inter', sans-serif;
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        min-height: 100vh;
        margin: 0;
    }

    .signup-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .signup-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(44, 62, 80, 0.18);
        padding: 2.7rem 2.2rem 2.2rem 2.2rem;
        max-width: 450px;
        width: 100%;
        margin: auto;
        animation: fadeIn 0.7s;
        color: #222;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .signup-card h2 {
        color: #1976d2;
        font-weight: 700;
        margin-bottom: 1.7rem;
        text-align: center;
        letter-spacing: 1px;
    }

    .form-label {
        font-weight: 600;
        color: #1976d2;
        margin-bottom: 0.3rem;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px 16px;
        background-color: #f4f8fb;
        border: 1.5px solid #b6c6e3;
        color: #222;
        font-size: 1rem;
        margin-bottom: 0.7rem;
        transition: border 0.2s, box-shadow 0.2s;
    }

    .form-control:focus {
        border-color: #1976d2;
        box-shadow: 0 0 0 0.15rem rgba(25, 118, 210, 0.13);
        background-color: #f4f8fb;
        color: #222;
    }

    .form-control::placeholder {
        color: #a0a0a0;
        opacity: 1;
    }

    .btn-danger {
        background: linear-gradient(90deg, #1976d2 60%, #00bfae 100%);
        border: none;
        border-radius: 12px;
        font-weight: 700;
        padding: 0.85rem;
        font-size: 1.1rem;
        color: #fff;
        box-shadow: 0 2px 8px rgba(25, 118, 210, 0.08);
        transition: background 0.2s, box-shadow 0.2s;
    }

    .btn-danger:hover {
        background: linear-gradient(90deg, #00bfae 60%, #1976d2 100%);
    }

    .login-link {
        margin-top: 1.2rem;
        text-align: center;
    }

    .login-link a {
        color: #1976d2;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }

    .login-link a:hover {
        color: #00bfae;
        text-decoration: underline;
    }

    .alert {
        border-radius: 0.75rem;
        font-size: 0.98rem;
        margin-bottom: 1.1rem;
        background: #ffeaea;
        color: #d32f2f;
        border: 1px solid #f8bbd0;
        padding: 0.8rem 1rem;
    }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100 signup-wrapper">
    <div class="signup-card">
        <h2>Create an Account</h2>

        {% if app.flashes('error') %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
        {% endif %}

        <form method="post" action="{{ path('signup') }}">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    class="form-control" 
                    value="{{ username|default('') }}" 
                    required 
                    autofocus
                    placeholder="Enter your username"
                >
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-control" 
                    value="{{ email|default('') }}" 
                    required
                    placeholder="you@example.com"
                >
            </div>

            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    class="form-control" 
                    required
                    placeholder="••••••••"
                >
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-danger">Register</button>
            </div>

            <div class="text-center login-link">
                <small>Already have an account? <a href="{{ path('login') }}">Login here</a></small>
            </div>
        </form>
    </div>
</div>
{% endblock %}
